<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="Input" TargetType="TextBox">
        <Setter Property="BorderThickness" Value="0 0 0 2px" />
        <Setter Property="FontSize" Value="18px" />
        <Setter Property="Padding" Value="10px 0 0 0" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
    </Style>

    <Style x:Key="TextBox-Table" TargetType="TextBox" BasedOn="{StaticResource Input}">
        <Setter Property="Height" Value="19px" />
    </Style>

    <Style x:Key="TextBox-Table-Bold" TargetType="TextBox" BasedOn="{StaticResource TextBox-Table}">
        <Setter Property="FontWeight" Value="Bold" />
    </Style>

    <Style x:Key="Input-Id" BasedOn="{StaticResource Input}" TargetType="TextBox">
        <Setter Property="Visibility" Value="Collapsed" />
    </Style>

    <Style x:Key="Readonly" TargetType="TextBox" BasedOn="{StaticResource Input}">
        <Setter Property="IsReadOnly" Value="True" />
    </Style>

    <Style x:Key="Input-Time" TargetType="TextBox" BasedOn="{StaticResource Input}">
        <Setter Property="Width" Value="45px" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="HorizontalAlignment" Value="Center" />
    </Style>

</ResourceDictionary>
