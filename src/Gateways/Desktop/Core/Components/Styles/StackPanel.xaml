<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="Wrapper" TargetType="StackPanel">
    </Style>

    <Style x:Key="Form" TargetType="StackPanel" BasedOn="{StaticResource Wrapper}">
    </Style>

    <Style x:Key="List-Horizontal" TargetType="StackPanel" BasedOn="{StaticResource Wrapper}">
        <Setter Property="Orientation" Value="Horizontal" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <Style x:Key="List-Vertical" BasedOn="{StaticResource Wrapper}" TargetType="StackPanel">
        <Setter Property="Orientation" Value="Vertical" />
    </Style>

    <Style x:Key="List-Vertical-Centered"  TargetType="StackPanel" BasedOn="{StaticResource List-Vertical}">
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <Style x:Key="Performance-Column" BasedOn="{StaticResource List-Vertical}" TargetType="StackPanel">
        <Setter Property="Width" Value="140px" />
    </Style>

</ResourceDictionary>
